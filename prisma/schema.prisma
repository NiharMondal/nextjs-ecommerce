// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type ProductsRating {
  count Int
  rate  Int
}

model Products {
  id          String         @id @default(auto()) @map("_id") @db.ObjectId
  category    String
  description String
  image       String
  price       Int
  rating      ProductsRating
  title       String
}

model Users {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique
  password String
  name     String
}
